                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/ticketLoginActivityImageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="50dp"
                        android:contentDescription="@string/ticketLoginActivityImageViewString"
                        app:srcCompat="@drawable/ic_ticket_black" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/loginPromptLoginActivityTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/loginPromptLoginActivityTextViewString"
                    android:textAlignment="center"
                    android:textColor="@color/colorLoginActivityFieldsText"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailLoginActivityTextInputLayout"
