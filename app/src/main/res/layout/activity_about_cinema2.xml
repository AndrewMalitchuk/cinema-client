<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutCinema2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.skydoves.indicatorscrollview.IndicatorScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/indicatorScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.skydoves.indicatorscrollview.IndicatorView
                    android:id="@+id/indicatorView"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    app:indicator_expandingAllItemRatio="0.9"
                    app:indicator_expandingRatio="0.2"
                    app:indicator_itemPadding="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="40dp">

                    <LinearLayout
                        android:id="@+id/section1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/section2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </LinearLayout>
            </LinearLayout>
        </com.skydoves.indicatorscrollview.IndicatorScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>