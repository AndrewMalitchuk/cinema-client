<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/filmImage"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:background="@color/colorLoginActivityText"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cinemaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/loadingMessage"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cinemaAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loadingMessage"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/filmCinema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loadingMessage"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/filmPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loadingMessage"
                    android:textColor="@color/black" />





            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
